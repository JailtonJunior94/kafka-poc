{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "args": []
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "args": []
        },
        {
            "name": "Consumer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/consumer/main.go",
            "args": []
        },
        {
            "name": "Producer [GoLang]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/producer/main.go",
            "args": []
        },
        {
            "name": "Producer [C#]",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/samples/dotnet/src/Producer/bin/Debug/net8.0/Producer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/samples/dotnet/src/Producer",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Producer [NodeJS]",
            "program": "${workspaceFolder}/producer/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
    ],
    "compounds": [
        {
            "name": "API + Producer",
            "configurations": [
                "API",
                "Producer [GoLang]"
            ]
        },
        {
            "name": "Producer + Consumer",
            "configurations": [
                "Producer [GoLang]",
                "Consumer"
            ]
        }
    ]
}